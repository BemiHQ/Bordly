{
  "name": "bordly-backend",
  "license": "AGPL-3.0",
  "type": "module",
  "exports": {
    "./trpc-router": {
      "types": "./src/trpc-router.ts",
      "default": "./dist/trpc-router.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "rm -f tsconfig.tsbuildinfo && tsc -p tsconfig.json && tsc-alias -p tsconfig.json && tsc-esm-fix --target=dist",
    "start": "node dist/server.js",
    "mikro-orm": "NODE_OPTIONS='--import tsx' mikro-orm",
    "migrate": "tsx src/scripts/migrate.ts",
    "migrate:prod": "node dist/scripts/migrate.js",
    "fetch-emails": "tsx src/scripts/fetch-emails.ts",
    "repl": "tsx src/scripts/repl.ts"
  },
  "dependencies": {
    "@aws-sdk/client-sesv2": "^3.975.0",
    "@fastify/cors": "^11.2.0",
    "@fastify/secure-session": "^8.3.0",
    "@mastra/core": "^1.0.4",
    "@mikro-orm/core": "^6.6.5",
    "@mikro-orm/migrations": "^6.6.5",
    "@mikro-orm/postgresql": "^6.6.5",
    "@mikro-orm/reflection": "^6.6.5",
    "@sentry/node": "^10.38.0",
    "@trpc/server": "^11.8.1",
    "cheerio": "^1.2.0",
    "fastify": "^5.7.1",
    "googleapis": "^170.1.0",
    "pg-boss": "^12.7.1",
    "superjson": "^2.2.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.6.5",
    "@types/node": "^25.0.10",
    "mastra": "^1.0.1",
    "pino-pretty": "^13.1.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsc-esm-fix": "^3.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
